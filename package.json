{
  "name": "magicr",
  "version": "0.1.0-beta",
  "description": "AI-powered changelog generator from your commit history, built for dev workflows.",
  "keywords": [
    "changelog",
    "release",
    "git",
    "ai",
    "cli",
    "automation",
    "semantic-versioning"
  ],
  "author": "Waren Gonzaga <opensource@warengonzaga.com> (https://warengonzaga.com)",
  "license": "GPL-3.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/warengonzaga/magic-release.git"
  },
  "bugs": {
    "url": "https://github.com/warengonzaga/magic-release/issues"
  },
  "homepage": "https://github.com/warengonzaga/magic-release#readme",
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "packageManager": "yarn@4.5.3",
  "bin": "./dist/cli/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "lint:check": "eslint src --ext .ts,.tsx",
    "lint:security": "eslint src/**/*.ts --config eslint.security.config.js",
    "secure:code": "snyk code test --public",
    "secure:scan": "snyk test",
    "secure": "yarn secure:scan && yarn secure:code && yarn lint:security",
    "security": "yarn secure",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "precommit": "yarn lint:check && yarn format:check && yarn type-check",
    "prepublishOnly": "yarn clean && yarn build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate": "yarn lint && yarn test && yarn build",
    "validate:full": "yarn install && yarn lint && yarn test:coverage && yarn build && yarn secure",
    "magicr": "node dist/cli/index.js"
  },
  "dependencies": {
    "@wgtechlabs/log-engine": "^2.1.1",
    "chalk": "^5.3.0",
    "conf": "^13.0.1",
    "date-fns": "^4.1.0",
    "execa": "^9.5.1",
    "ink": "^5.0.1",
    "ink-big-text": "^2.0.0",
    "ink-gradient": "^3.0.0",
    "ink-select-input": "^6.0.0",
    "ink-spinner": "^5.0.0",
    "is-git-repository": "^2.0.0",
    "meow": "^13.2.0",
    "openai": "^4.67.3",
    "react": "^18.3.1",
    "simple-git": "^3.27.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.12",
    "@types/semver": "^7.7.0",
    "@typescript-eslint/eslint-plugin": "^8.13.0",
    "@typescript-eslint/parser": "^8.13.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-security-node": "^1.1.4",
    "jest": "^30.0.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "snyk": "^1.1297.3",
    "ts-jest": "^29.4.0",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  }
}
